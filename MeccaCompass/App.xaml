<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MeccaCompass"
             x:Class="MeccaCompass.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom colors for the app -->
            <Color x:Key="PrimaryColor">#007C40</Color>
            <Color x:Key="SecondaryColor">#D4AF37</Color>
            <Color x:Key="TertiaryColor">#8C5C03</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#333333</Color>
            <Color x:Key="QiblaArrowColor">#D4AF37</Color>
            
            <!-- Dark mode colors -->
            <Color x:Key="DarkBackgroundColor">#1E1E1E</Color>
            <Color x:Key="DarkTextColor">#FFFFFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>